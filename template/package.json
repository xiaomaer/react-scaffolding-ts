{
    "name": "project-name",
    "version": "1.0.0",
    "description": "project description",
    "scripts": {
        "start": "webpack-dev-server --progress --color --config config/webpack.config.dev.js",
        "build": "webpack --config config/webpack.config.prod.js",
        "analyze": "NODE_ANALYZE=analyze webpack --config config/webpack.config.prod.js",
        "lint:es": "eslint --fix --ext .ts,tsx,js,jsx src",
        "lint:style": "stylelint --fix src/**/*.{css,sass,scss} --syntax scss",
        "commit": "git-cz"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -e $GIT_PARAMS"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "git add"
        ],
        "src/**/*.{css,scss,less}": [
            "stylelint --fix",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "author": "author",
    "license": "ISC",
    "dependencies": {
        "react": "^16.3.1",
        "react-dom": "^16.3.1",
        "react-router-dom": "^4.2.2"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/plugin-proposal-class-properties": "^7.4.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "@babel/preset-typescript": "^7.3.3",
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@types/react": "^16.8.13",
        "@types/react-dom": "^16.8.4",
        "@types/react-router-dom": "^4.3.2",
        "@typescript-eslint/eslint-plugin": "^1.6.0",
        "babel-eslint": "^9.0.0",
        "babel-loader": "^8.0.4",
        "clean-webpack-plugin": "^0.1.19",
        "commitizen": "^3.0.7",
        "css-loader": "^0.28.11",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^5.16.0",
        "eslint-config-alloy": "^2.0.0-alpha.2",
        "eslint-config-prettier": "^4.1.0",
        "eslint-loader": "^2.1.2",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.4",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^1.1.11",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "happypack": "^5.0.0",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^1.3.1",
        "less": "^3.0.1",
        "less-loader": "^4.1.0",
        "lint-staged": "^8.1.5",
        "node-sass": "^4.8.3",
        "postcss-import": "^11.1.0",
        "postcss-loader": "^2.1.3",
        "postcss-preset-env": "^5.2.1",
        "prettier": "^1.17.0",
        "sass-loader": "^6.0.7",
        "speed-measure-webpack-plugin": "^1.2.3",
        "style-loader": "^0.20.3",
        "stylelint": "^10.0.1",
        "stylelint-config-standard": "^18.3.0",
        "typescript": "^3.4.3",
        "url-loader": "^1.0.1",
        "webpack": "^3.11.0",
        "webpack-bundle-analyzer": "^2.11.1",
        "webpack-cli": "^2.0.14",
        "webpack-dev-server": "^2.11.2",
        "webpack-merge": "^4.1.2",
        "webpack-parallel-uglify-plugin": "^1.1.0"
    }
}
