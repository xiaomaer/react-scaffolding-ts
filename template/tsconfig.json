{
    "compilerOptions": {
      "strict": true,
      "allowJs": true,
      "target": "es2015",
      "module": "commonjs",
      "removeComments": true,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "declaration": true,
      "pretty": true,
      "rootDir": "src",
      "sourceMap": false,
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noImplicitAny": false,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "outDir": "dist",
      "baseUrl": ".",
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "esnext"],
      "paths": {
        "@api/*": ["src/api/*"],
        "@components/*": ["src/components/*"],
        "@constants/*": ["src/constants/*"],
        "@pages/*": ["src/pages/*"],
        "@utils/*": ["src/utils/*"]
      },
    },
    "include": ["src"]
  }
  